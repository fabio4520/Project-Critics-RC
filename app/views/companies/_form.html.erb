<%= form_with(model: company) do |form| %>
  <% if company.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(company.errors.count, "error") %> prohibited this company from being saved:</h2>

      <ul>
        <% company.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-1">
    <%= form.label :name, style: "display: block", class: "company-form__label mb-0.25" %>
    <%= form.text_field :name, class: "input", placeholder: "Company SA"%>
  </div>

  <div class="mb-1">
    <%= form.label :description, style: "display: block", class: "company-form__label mb-0.25" %>
    <%= form.text_area :description, class: "input", placeholder: "About the company..." %>
  </div>

  <div class="mb-1">
    <%= form.label :start_date, style: "display: block", class: "company-form__label mb-0.25" %>
    <%= form.date_field :start_date, class: "input"%>
  </div>

  <div class="mb-1">
    <%= form.label :country, style: "display: block", class: "company-form__label mb-0.25" %>
    <%= form.text_field :country, class: "input" , placeholder: "Somewhere"%>
  </div>

  <div class="mb-1">
    <%= form.label :cover, style: "display: block", class: "company-form__label mb-0.25" %>
    <%= form.file_field :cover, accept: "image/png, image/jpg"%>
  </div>  

  <div class="mb-1">
    <%= form.submit class:"button button--primary btn-width100 overline" %>
  </div>
<% end %>
